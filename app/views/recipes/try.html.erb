

<div class="recipe-try">
  <h2 class="try-h2">Try a new recipe</h2>
  <div class = "try-container">
    <% @response ["recipes"].each do |response| %>
      <a href="/recipes/show/<%= response ["id"]%>">
        <div class="try-box">
          <%= image_tag response ["image"] %>
          <br>
          <p><%= response ["title"] %></p>
          <br>
        </div>
      </a>
    <% end %>
  </div>
  <p class="reload"><a href="/recipes/try">Reload</a></p><br/>
</div>
